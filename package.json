{
  "name": "irlshots",
  "version": "1.0.0",
  "description": "Modern, stylish snapshot tool for OBS and Twitch streamers",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently -k -s first \"cross-env BROWSER=none vite\" \"wait-on http://localhost:3000 && electron .\"",
    "renderer": "vite",
    "build-renderer": "vite build",
    "dist": "electron-builder",
    "pack": "npm run build-renderer && npm run dist"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.13.0",
    "axios": "^1.4.0",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "jimp": "^0.16.1",
    "obs-websocket-js": "^5.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.5",
    "socket.io": "^4.6.1",
    "tmi.js": "^1.8.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "canvas": "^3.1.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.streamer.irlshots",
    "productName": "IRLshots",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "config.example.json",
      "public/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      { "from": "public", "to": "public" }
    ],
    "asarUnpack": [
      "public/**/*"
    ],
    "extraMetadata": {
      "buildExclude": ["website/**"]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons"
    }
  }
}
